{
  "name": "scribe-ai",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "extension",
    "frontend",
    "backend",
    "ai-service"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:ai\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:ai": "cd ai-service && uvicorn main:app --reload",
    "build": "npm run build:extension && npm run build:backend && npm run build:frontend && npm run build:ai",
    "build:extension": "cd extension && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:ai": "cd ai-service && echo 'FastAPI build handled by Docker'",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}



